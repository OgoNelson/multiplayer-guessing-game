{
  "name": "multiplayer-guessing-game",
  "version": "1.0.0",
  "description": "A real-time multiplayer guessing game",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "test": "node test-api.js",
    "dev": "nodemon server/app.js",
    "server:dev": "nodemon server/app.js",
    "client:dev": "cd client && npm run dev",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "cd client && npm run build",
    "build:start": "npm i vite@latest && npm run build && npm start",
    "preview": "cd client && npm run preview"
  },
  "keywords": [
    "multiplayer",
    "game",
    "socket.io",
    "real-time"
  ],
  "author": "Ogo Nelson",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "socket.io-client": "^4.8.1"
  }
}
